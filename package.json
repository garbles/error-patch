{
  "name": "error-patch",
  "version": "0.0.2",
  "description": "A patched error object to catch all errors",
  "main": "lib/index.js",
  "scripts": {
    "bundle": "browserify -s errorPatch src/index.js -t babelify > dist/index.js",
